<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/correop"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idpedido"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/correopedido"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/btn_eliminarp"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:contentDescription="@string/enter_how_much_cookies_you_want"
                app:srcCompat="@drawable/ic__delete"
                tools:ignore="SmallSp,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/btn_modificard"
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageButton
                android:id="@+id/btn_mas"
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#009688"
                app:srcCompat="@drawable/ic_baseline_add_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/fechacp"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#222222" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

