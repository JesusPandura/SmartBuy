<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F8"
    android:backgroundTint="#F8F8F6"
    tools:context=".RegistrarActivity">

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="429dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Registro"
            android:textColor="#0C0C0C"
            android:textColorHighlight="#0C0C0C"
            android:textColorHint="#100F0F"
            android:textColorLink="#0B0B0B"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="105dp" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="253dp"
            android:layout_height="46dp"
            android:backgroundTint="#100F0F"
            android:ems="10"
            android:foregroundTint="#AAA7A7"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:shadowColor="#A6A6A6"
            android:textAllCaps="true"
            android:textColor="#A6A6A6"
            android:textColorHighlight="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textColorLink="#A6A6A6"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="165dp"
            tools:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/contras"
            android:layout_width="253dp"
            android:layout_height="46dp"
            android:backgroundTint="#090909"
            android:ems="10"
            android:foregroundTint="#090909"
            android:hint="123456"
            android:inputType="textPassword"
            android:shadowColor="#A6A6A6"
            android:textColor="#A6A6A6"
            android:textColorHighlight="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textColorLink="#A6A6A6"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/Confirmacion_contrase"
            android:layout_width="253dp"
            android:layout_height="41dp"
            android:backgroundTint="#0B0A0A"
            android:ems="10"
            android:foregroundTint="#A6A6A6"
            android:hint="123345"
            android:inputType="textPassword"
            android:shadowColor="#A6A6A6"
            android:textColor="#A6A6A6"
            android:textColorHighlight="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textColorLink="#A6A6A6"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="268dp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="254dp"
            android:layout_height="44dp"
            android:backgroundTint="#0C0C0C"
            android:ems="10"
            android:foregroundTint="#A6A6A6"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:shadowColor="#A6A6A6"
            android:textAllCaps="true"
            android:textColor="#A6A6A6"
            android:textColorHighlight="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:textColorLink="#A6A6A6"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="427dp" />

        <CheckBox
            android:id="@+id/btn_cliente"
            android:layout_width="252dp"
            android:layout_height="38dp"
            android:backgroundTint="#121111"
            android:foregroundTint="#050505"
            android:shadowColor="#100F0F"
            android:text="Cliente"
            android:textAllCaps="false"
            android:textColor="#121111"
            android:textColorHighlight="#070707"
            android:textColorHint="#0B0A0A"
            android:textColorLink="#0C0C0C"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="379dp" />

        <CheckBox
            android:id="@+id/btn_ad"
            android:layout_width="253dp"
            android:layout_height="51dp"
            android:backgroundTint="#151414"
            android:foregroundTint="#0B0A0A"
            android:shadowColor="#0E0E0E"
            android:text="Administrador"
            android:textColor="#0C0C0C"
            android:textColorHighlight="#0B0A0A"
            android:textColorHint="#151414"
            android:textColorLink="#1B1818"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="317dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="259dp"
            android:layout_height="63dp"
            android:onClick="registrarusuario"
            android:text="@string/btn_registro" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>